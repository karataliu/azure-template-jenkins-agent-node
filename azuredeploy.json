{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourcePrefix": {
            "type": "string",
            "metadata": {
                "description": "Prefix string for VMs."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Admin user name for cluster VMs."
            },
            "defaultValue": "jenkins"
        },
        "sshPublicKey": {
            "type": "securestring",
            "metadata": {
                "description": "Ssh public key for cluster VMs"
            }
        },
        "vnetID": {
            "type": "string",
            "metadata": {
                "description": "Existing subnet ID"
            }
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "description": "Existing subnet ID"
            },
            "defaultValue": "k8s-subnet"
        },
        "vmCount": {
            "type": "int",
            "metadata": {
                "description": "VM instance count in the cluster."
            },
            "defaultValue": 2,
            "maxValue": 20
        }
    },
    "variables": {
        "imageReference": {
            "publisher": "Canonical",
            "offer": "UbuntuServer",
            "sku": "16.04-LTS",
            "version": "latest"
        },
        "vmSize": "Standard_F4s",
        "storageAccountType": "Premium_LRS",
        "prefix": "[parameters('resourcePrefix')]",
        "availabilitySetName": "[variables('prefix')]",
        "availabilitySetID": "[resourceId('Microsoft.Compute/availabilitySets/', variables('availabilitySetName'))]",
        "location": "[resourceGroup().location]",
        "nicName": "[variables('prefix')]",
        "vmName": "[variables('prefix')]",
        "subnetID": "[concat(parameters('vnetID'),'/subnets/',parameters('subnetName'))]",
        "vmCount": "[parameters('vmCount')]",
        "adminUsername": "[parameters('adminUsername')]",
        "sshPublicKey": "[parameters('sshPublicKey')]",
        "sshKeyPath": "[concat('/home/',parameters('adminUsername'),'/.ssh/authorized_keys')]",
        "index": 1
    },
    "resources": [
        {
            "apiVersion": "2016-04-30-preview",
            "type": "Microsoft.Compute/availabilitySets",
            "name": "[variables('availabilitySetName')]",
            "location": "[variables('location')]",
            "properties": {
                "platformUpdateDomainCount": 5,
                "platformFaultDomainCount": 2,
                "virtualMachines": []
            },
            "sku": {
                "name": "Aligned"
            }
        },
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Network/networkInterfaces",
            "copy": {
                "name": "vmCountCopy",
                "count": "[variables('VMCount')]"
            },
            "name": "[concat(variables('nicName'),copyIndex(variables('index')))]",
            "location": "[variables('location')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('subNetID')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2016-04-30-preview",
            "type": "Microsoft.Compute/virtualMachines",
            "copy": {
                "name": "vmCountCopy",
                "count": "[variables('VMCount')]"
            },
            "name": "[concat(variables('vmName'),copyIndex(variables('index')))]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[variables('availabilitySetID')]",
                "[concat('Microsoft.Network/networkInterfaces/', variables('nicName'), copyIndex(variables('index')))]"
            ],
            "properties": {
                "availabilitySet": {
                    "id": "[variables('availabilitySetID')]"
                },
                "hardwareProfile": {
                    "vmSize": "[variables('vmSize')]"
                },
                "osProfile": {
                    "computerName": "[concat(variables('vmName'),copyIndex(variables('index')))]",
                    "adminUsername": "[variables('adminUsername')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "keyData": "[variables('sshPublicKey')]",
                                    "path": "[variables('sshKeyPath')]"
                                }
                            ]
                        }
                    }
                },
                "storageProfile": {
                    "osDisk": {
                        "name": "[concat(variables('vmName'),copyIndex(variables('index')))]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[variables('storageAccountType')]"
                        }
                    },
                    "imageReference": "[variables('imageReference')]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(variables('nicName'),copyIndex(variables('index'))))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "apiVersion": "2016-04-30-preview",
                    "type": "extensions",
                    "name": "setupJre",
                    "location": "[variables('location')]",
                    "properties": {
                        "publisher": "Microsoft.Azure.Extensions",
                        "type": "CustomScript",
                        "typeHandlerVersion": "2.0",
                        "autoUpgradeMinorVersion": true,
                        "settings": {},
                        "protectedSettings": {
                            "commandToExecute": "apt update && DEBIAN_FRONTEND=noninteractive apt -y --no-install-recommends install openjdk-9-jre"
                        }
                    }
                }
            ]
        }
    ],
    "outputs": {
        "prefix": {
            "type": "string",
            "value": "[variables('prefix')]"
        },
        "resourceGroup": {
            "type": "string",
            "value": "[resourceGroup().name]"
        }
    }
}