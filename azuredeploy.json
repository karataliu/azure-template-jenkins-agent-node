{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourcePrefix": {
            "type": "string",
            "metadata": {
                "description": "Prefix string for VMs."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Admin user name for cluster VMs."
            },
            "defaultValue": "jenkins"
        },
        "sshPublicKey": {
            "type": "securestring",
            "metadata": {
                "description": "Ssh public key for cluster VMs"
            }
        },
        "subNetID": {
            "type": "string",
            "metadata": {
                "description": "Existing subnet ID"
            }
        },
        "vmCount": {
            "type": "int",
            "metadata": {
                "description": "VM instance count in the cluster."
            },
            "defaultValue": 2,
            "maxValue": 20
        }
    },
    "variables": {
        "imageReference": {
            "publisher": "Canonical",
            "offer": "UbuntuServer",
            "sku": "16.04-LTS",
            "version": "latest"
        },
        "prefix": "[parameters('resourcePrefix')]",
        "location": "[resourceGroup().location]",
        "nicName": "[concat(variables('prefix'),'nic')]",
        "vmName": "[concat(variables('prefix'),'vm')]",
        "vmSize": "Standard_D2",
        "storageAccountType": "Standard_LRS",
        "subNetID": "[parameters('subNetID')]",
        "vmCount": "[parameters('vmCount')]",
        "sshPublicKey": "[parameters('sshPublicKey')]",
        "index": 1
    },
    "resources": [
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Network/networkInterfaces",
            "copy": {
                "name": "vmCountCopy",
                "count": "[variables('VMCount')]"
            },
            "name": "[concat(variables('nicName'),copyIndex(variables('index')))]",
            "location": "[variables('location')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('subNetID')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2016-04-30-preview",
            "type": "Microsoft.Compute/virtualMachines",
            "copy": {
                "name": "vmCountCopy",
                "count": "[variables('VMCount')]"
            },
            "name": "[concat(variables('vmName'),copyIndex(variables('index')))]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('nicName'), copyIndex(variables('index')))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('vmSize')]"
                },
                "osProfile": {
                    "computerName": "[concat(variables('vmName'),copyIndex(variables('index')))]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "keyData": "[parameters('sshPublicKey')]"
                                }
                            ]
                        }
                    }
                },
                "storageProfile": {
                    "osDisk": {
                        "name": "[concat(parameters('vmName'),copyIndex(index))]",
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    },
                    "imageReference": "[variables('imageReference')]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(variables('nicName'),copyIndex(variables('index'))))]"
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
        "prefix": {
            "type": "string",
            "value": "[variables('prefix')]"
        },
        "resourceGroup": {
            "type": "string",
            "value": "[resourceGroup().name]"
        }
    }
}